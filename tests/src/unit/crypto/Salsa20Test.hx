            var enc = salsa20.encrypt(text);
            eq( enc.toHex().toUpperCase(), ciphers[i] );
            salsa20.seek(position[i]);
            var decr = salsa20.decrypt(enc);
            eq( decr.toHex().toUpperCase(), plainText[i] );
            }
        time = Timer.stamp()-time;
        trace("Finished : "+time+" seconds");
    }
